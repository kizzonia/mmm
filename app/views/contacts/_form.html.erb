
<%= simple_form_for(@contact) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :email, class: "form-control bg-white", placeholder: "Your E-mail Address" %>
    <%= f.input :address, class: "form-control bg-white", placeholder: " Your Full Address" %>
    <%= f.input :phone, class: "form-control bg-white", placeholder: " Your Mobile Phone Number" %>
    <%= f.input :footer_mgs, class: "form-control bg-white" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "ttm-btn ttm-btn-size-md ttm-btn-bgcolor-skincolor" %>
  </div>
<% end %>
