<!-- topzero-padding-section -->
<% @headers.take(1).each do |a| %>
<section class="ttm-row zero-padding-section mt_95 res-991-mt-0 clearfix">
    <div class="container">
        <div class="row no-gutters">
            <div class="col-lg-3">
                <!-- col-bg-img-three -->
                <div class="col-bg-img-three ttm-bg ttm-col-bgimage-yes res-991-h-auto" style="background-image:url(<%= a.plansimg_url.to_s %>) !important;">
                   <div class="ttm-col-wrapper-bg-layer ttm-bg-layer">
                        <div class="ttm-bg-layer-inner"></div>
                    </div>
                </div>
                <!-- Responsive View image -->
                <img src="<%= a.plansimg_url.to_s %>" class="ttm-equal-height-image" alt="col-bgimage-3">
            </div>
            <div class="col-lg-9">
                <div class="ttm-bgcolor-skincolor ttm-bg ttm-col-bgcolor-yes ttm-right-span">
                    <div class="ttm-col-wrapper-bg-layer ttm-bg-layer">
                        <div class="ttm-bg-layer-inner"></div>
                    </div>
                    <div class="layer-content">
                        <div class="spacing-6 ttm-textcolor-white">
                            <h3 class="mb-5"><%= a.planscta1 %></h3>
                            <p class="mb-0"><%= a.planscta2 %></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<% end %>
